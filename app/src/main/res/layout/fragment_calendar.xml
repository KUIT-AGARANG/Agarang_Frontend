<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Setting.CalendarFragment"
    >
        <DatePicker
            android:id="@+id/dp_datepicker"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:theme="@style/CustomDatePickerStyle"
            app:layout_constraintTop_toBottomOf="@id/btn_date"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent" />

        <android.widget.Button
            android:id="@+id/btn_ok"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:text="확인"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard500"
            android:background="@drawable/style_calendar_ok"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="11dp"
            app:layout_constraintTop_toBottomOf="@id/dp_datepicker"
            app:layout_constraintEnd_toEndOf="@id/dp_datepicker"
            />

        <android.widget.Button
            android:id="@+id/btn_cancle"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:text="취소"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard500"
            android:background="@drawable/style_calendar_cancle"
            android:backgroundTint="#F5F5F5"
            android:paddingTop="10dp"
            android:paddingBottom="11dp"
            app:layout_constraintTop_toBottomOf="@id/dp_datepicker"
            app:layout_constraintStart_toStartOf= "@id/dp_datepicker"
            />

        <android.widget.Button
            android:id="@+id/btn_date"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="출산예정일"
            android:fontFamily="@font/pretendard600"
            android:paddingTop="17dp"
            android:paddingBottom="14dp"
            android:paddingStart="101dp"
            android:paddingEnd="101dp"
            android:background="@drawable/style_calendar_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>