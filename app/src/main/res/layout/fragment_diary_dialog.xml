<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="165dp"
    android:minWidth="280dp"
    android:minHeight="165dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/diary_dialog_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard600"
        android:text="선택한 추억을 삭제하시겠어요?"
        android:layout_marginTop="37dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#656558"
        android:fontFamily="@font/pretendard400"
        android:text="추억 다이어리가 영구적으로 삭제됩니다."
        android:layout_marginTop="63dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#656558"
        android:fontFamily="@font/pretendard400"
        android:text="생성된 노래 또한 함께 삭제되며, 복구는 어렵습니다."
        android:layout_marginTop="78dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_diary_dialog_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_diary_dialog_no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아니오"
        android:fontFamily="@font/pretendard600"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/iv_diary_dialog_no"
        app:layout_constraintBottom_toBottomOf="@id/iv_diary_dialog_no"
        app:layout_constraintStart_toStartOf="@id/iv_diary_dialog_no"
        app:layout_constraintEnd_toEndOf="@id/iv_diary_dialog_no"/>

    <ImageView
        android:id="@+id/iv_diary_dialog_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_diary_dialog_yes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예"
        android:fontFamily="@font/pretendard600"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/iv_diary_dialog_yes"
        app:layout_constraintBottom_toBottomOf="@id/iv_diary_dialog_yes"
        app:layout_constraintStart_toStartOf="@id/iv_diary_dialog_yes"
        app:layout_constraintEnd_toEndOf="@id/iv_diary_dialog_yes"/>


</androidx.constraintlayout.widget.ConstraintLayout>